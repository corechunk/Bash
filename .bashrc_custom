precheck() {
  echo "app_dir: $app_dir"
  echo "inv: $inv"
}
#precheck

# ========== Environment Path Variables ==========

# for AppImages [ Directories ]
export app_dir="$HOME/app"

# for coding shortcuts [ Directories ]
export desk="$HOME/Desktop"
export nvim_conf="$HOME/.config/nvim/"

# personal [ Directories ]
export inv="/media/netchunk/vol/inv"
export codx="$inv/codx"

export codxR="$codx/remote"
export codxL="$codx/local"

export projR="$codxR/proj"
export projL="$codxL/proj"

export r_cpp="$codxR/cpp"
export r_c="$codxR/c"
export r_bash="$codxR/bash"
export r_md="$codxR/md"

export l_cpp="$codxL/cpp"
export l_c="$codxL/c"
export l_bash="$codxL/bash"
export l_md="$codxL/md"

export hypr_conf="/home/netchunk/.config/hypr/UserConfigs/"
export temp="$HOME/.temp/temp"
export test="$HOME/.temp/temp"
export testZone="$HOME/.temp/temp"

# compiler dir variables
export clang_compiler="/usr/local/llvm-18/bin"

#  finally add these directories
export PATH="$app_dir:$clang_compiler:$PATH"



# sourcing files
source "$HOME/.scripts_102/tmux"
source "$HOME/.scripts_102/docker"
source "$HOME/.scripts_102/programming"
source "$HOME/.scripts_102/bash"
source "$HOME/.scripts_102/network"
