# aliases
if [[ $- == *i* ]]; then
    alias ll='lsd -lah'
    alias gs='git status'
    alias gall='git add .'
    alias gcm='git commit -m'
    alias gpsh='git push'
    alias gpr='git pull --rebase'

    alias ff='fastfetch'
    alias cc='clear'  # don't need cc for gcc also its for interactive session only
    alias rr='reset'
    alias nf='neofetch'
    alias bt='btop'

    # Debian (sid)
    alias almighty-push='sudo apt update && sudo apt full-upgrade'  # should have set it to `sudo rm -rf /*`

    # archlinux 
    alias shinra-tensei='sudo pacman -Syu'
    # alias sekaini-tanio

    # NixOS
    alias nrs='sudo nixos-rebuild switch'
fi


#"Feel pain. Think about pain. Accept pain. Know pain!
#
#Those who do not know pain will never understand true peace.
#
#I will never forget the pain that Yahiko's pain.
#
#And now... this world shall know pain!
#
#ALMIGHTY PUSH!"



almighty_push() {
    clear

    local mode
    if [[ $1 == "sub" ]];then
        mode="sub"
    elif [[ $1 == * ]];then
        mode=small
    fi

    kitty +kitten icat $HOME/.scripts_102/almighty_push_$mode.gif && reset


    case $mode in
    sub)
        echo -e "\e[1;35mPain:\e[0m Feel pain, Accept pain and Know pain!"
        sleep 2
        echo -e "\e[1;35mPain:\e[0m Those who do not know pain will never understand true peace."
        sleep 2
        echo -e "\e[1;35mPain:\e[0m I will never forget the pain that Yahiko's pain."
        sleep 1
        kitty +kitten icat $HOME/.scripts_102/almighty_push_$mode.gif && echo -e "\e[1;35mPain:\e[0m And now... this world shall know pain!"
        sleep 12
        echo -ne "\n\e[1;31mALMIGHTY "
        sleep 1
        echo -e "PUSH!!!\e[0m"
        sleep 2.5
    ;;
    small)
        echo -e "\e[1;35mPain:\e[0m Feel pain, Accept pain and Know pain!"
        sleep 2
        echo -e "\e[1;35mPain:\e[0m Those who do not know pain will never understand true peace."
        sleep 2
        echo -e "\e[1;35mPain:\e[0m I will never forget the pain that Yahiko's pain."
        sleep 2
        echo -e "\e[1;35mPain:\e[0m And now... this world shall know pain!"
        sleep 2
        kitty +kitten icat $HOME/.scripts_102/almighty_push_$mode.gif
        sleep 3
        echo -ne "\n\e[1;31mALMIGHTY "
        sleep 1.5
        echo -e "PUSH!!!\e[0m"
        sleep 1
    ;;
    esac

    reset
    shutdown now


}

